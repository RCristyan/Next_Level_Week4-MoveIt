;\n    }\n\n    return (\n        <ChallengesContext.Provider \n            value={{ \n                level,\n                currentExperience,\n                experienceToNextLevel,\n                challengesCompleted,\n                levelUp,\n                startNewChallenge,\n                activeChallenge,\n                completeChallenge,\n                resetChallenge,\n            }}\n        >\n            {children}\n        </ChallengesContext.Provider>\n    );\n}"]},"metadata":{},"sourceType":"module"}